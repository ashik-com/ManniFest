<%- include('../admin/partials/header') %>
<div class="container-fluid">
  <div class="row">
    <!-- Filter Form -->
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Sales Report Filters</h4>
          <form id="filterForm" class="filter-form" action="/admin/sales-report" method="GET" style="display: flex; gap: 10px; align-items: center;">
            <div class="form-group">
              <label for="type">Report Type:</label>
              <select name="type" id="type" class="form-control" style="width: auto; display: inline-block;">
                <option value="daily" <%= filters.type === 'daily' ? 'selected' : '' %>>Daily</option>
                <option value="weekly" <%= filters.type === 'weekly' ? 'selected' : '' %>>Weekly</option>
                <option value="monthly" <%= filters.type === 'monthly' ? 'selected' : '' %>>Monthly</option>
                <option value="yearly" <%= filters.type === 'yearly' ? 'selected' : '' %>>Yearly</option>
                <option value="custom" <%= filters.type === 'custom' ? 'selected' : '' %>>Custom</option>
              </select>
            </div>
            <div class="form-group">
              <label for="startDate">Start Date:</label>
              <input type="text" id="startDate" name="startDate" value="<%= filters.startDate %>" class="form-control" style="width: auto; display: inline-block;" placeholder="Select start date">
            </div>
            <div class="form-group">
              <label for="endDate">End Date:</label>
              <input type="text" id="endDate" name="endDate" value="<%= filters.endDate %>" class="form-control" style="width: auto; display: inline-block;" placeholder="Select end date">
            </div>
            <button type="submit" class="btn btn-primary">Apply Filters</button>
          </form>
          <div class="mt-3">
            <button class="btn btn-success" onclick="downloadReport('pdf')">Download as PDF</button>
            <button class="btn btn-success ms-2" onclick="downloadReport('excel')">Download as Excel</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Summary Cards -->
    <div class="col-lg-3">
      <div class="card" style="background-color: #C7B89C;">
        <div class="card-body text-center">
          <h4 class="mt-3">Overall Sales Count</h4>
          <h1><%= summary.orderCount %></h1>
          <p class="card-subtitle">Total Orders</p>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="card" style="background-color: #C7B89C;">
        <div class="card-body text-center">
          <h4 class="mt-3">Overall Order Amount</h4>
          <h1>₹<%= summary.totalOrderAmount.toFixed(2) %></h1>
          <p class="card-subtitle">Gross Sales</p>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="card" style="background-color: #C7B89C;">
        <div class="card-body text-center">
          <h4 class="mt-3">Overall Discount</h4>
          <h1>₹<%= summary.totalDiscount.toFixed(2) %></h1>
          <p class="card-subtitle">Coupons & Offers</p>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="card" style="background-color: #C7B89C;">
        <div class="card-body text-center">
          <h4 class="mt-3">Net Sales</h4>
          <h1>₹<%= summary.netSales.toFixed(2) %></h1>
          <p class="card-subtitle">After Discounts</p>
        </div>
      </div>
    </div>

    <!-- Sales Report Table with Product Name -->
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Sales Report</h4>
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Period</th>
                  <th>Order ID</th>
                  <th>Product Name</th>
                  <th>Payment Method</th>
                  <th>Status</th>
                  <th>Total Sales (₹)</th>
                  <th>Discount (₹)</th>
                </tr>
              </thead>
              <tbody>
                <% trend.forEach(t => { %>
                  <% t.orders.forEach(order => { %>
                    <tr>
                      <td><%= t._id %></td>
                      <td><%= order.orderId %></td>
                      <td><%= order.productName || 'Unknown' %></td>
                      <td><%= order.paymentMethod %></td>
                      <td><%= order.orderStatus %></td>
                      <td>₹<%= (order.totalPrice || 0).toFixed(2) %></td>
                      <td>₹<%= (order.discount || 0).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                <% }) %>
                <% if (trend.length === 0) { %>
                  <tr>
                    <td colspan="7" class="text-center">No orders found for this period.</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Top Products Table -->
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Top Products</h4>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Product Name</th>
                <th>Units Sold</th>
                <th>Revenue</th>
              </tr>
            </thead>
            <tbody>
              <% topProducts.forEach(product => { %>
                <tr>
                  <td><%= product.productName %></td>
                  <td><%= product.totalSold %></td>
                  <td>₹<%= product.totalRevenue.toFixed(2) %></td>
                </tr>
              <% }) %>
              <% if (topProducts.length === 0) { %>
                <tr>
                  <td colspan="3" class="text-center">No top products found for this period.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Top Categories Table -->
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Top Categories</h4>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Category Name</th>
                <th>Units Sold</th>
                <th>Revenue</th>
              </tr>
            </thead>
            <tbody>
              <% topCategories.forEach(category => { %>
                <tr>
                  <td><%= category.categoryName %></td>
                  <td><%= category.totalSold %></td>
                  <td>₹<%= category.totalRevenue.toFixed(2) %></td>
                </tr>
              <% }) %>
              <% if (topCategories.length === 0) { %>
                <tr>
                  <td colspan="3" class="text-center">No top categories found for this period.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script>
  // Initialize Flatpickr for date pickers
  flatpickr("#startDate", { dateFormat: "Y-m-d" });
  flatpickr("#endDate", { dateFormat: "Y-m-d" });

  // Download Report
  function downloadReport(format) {
    const type = document.getElementById("type").value;
    const startDate = document.getElementById("startDate").value;
    const endDate = document.getElementById("endDate").value;
    const url = `/admin/sales-report/download?format=${format}&type=${type}&startDate=${startDate}&endDate=${endDate}`;
    console.log("Download URL:", url);
    window.location.href = url;
  }
</script>

<%- include('../admin/partials/footer') %>