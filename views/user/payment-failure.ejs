<%- include ('../user/partials/header', {name:name}) %>

<section class="payment-failure-section py-5">
    <div class="container">
        <div class="row justify-content-center" style="margin-top: 100px;">
            <div class="col-lg-6 text-center">
                <h2 class="text-danger mb-4">Payment Failed</h2>
                <p class="mb-4">We're sorry, but your payment could not be processed. Please try again or choose a different payment method. However, you can still confirm your order by making a repayment within the next 30 minutes.
                </p>
                <div class="alert alert-warning" role="alert">
                    <strong>Order ID:</strong> <%= orderId || 'N/A' %><br>
                    <strong>Reason:</strong> <%= 'Payment verification failed or was cancelled.' %>
                </div>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/user/orders" class="btn btn-secondary">Back to Orders</a>
                </div>
                <p class="mt-4">Need help? <a href="/user/contact">Contact Support</a></p>
            </div>
        </div>
    </div>
</section>

<style>
.payment-failure-section {
    min-height: 60vh;
    display: flex;
    align-items: center;
}

.payment-failure-section .alert {
    font-size: 0.9rem;
}

.payment-failure-section .btn {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
}
</style>

<%- include ('../user/partials/footer') %>