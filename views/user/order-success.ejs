<%- include('../user/partials/header', {name: name}) %>

<section class="order-success-section py-5" style="margin-top: 60px; background-color: #c5fddc;">
    <div class="container">
        <div class="card mx-auto shadow-sm" style="max-width: 700px; border-radius: 10px; border: none;">
            <div class="card-body p-4 p-md-5">
                <div class="text-center mb-4">
                    <div class="success-icon mb-3">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 68px;"></i>
                    </div>
                    <h1 class="card-title fw-bold" style="font-size: 28px; color: #212529;">Order Placed Successfully!</h1>
                    <p class="text-muted">Thank you for shopping with ManniFest. Your order has been received and is being processed.</p>
                </div>
                
                <div class="order-details mt-4 mb-4">
                    <div class="card bg-light border-0">
                        <div class="card-header bg-dark text-white py-3">
                            <h5 class="mb-0 fw-bold">Order Summary</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <p class="mb-1"><span class="fw-semibold text-secondary">Order ID:</span></p>
                                    <p class="fs-6" id="orderId"><%= orderId %></p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><span class="fw-semibold text-secondary">Order Date:</span></p>
                                    <p class="fs-6"><%= new Date().toLocaleDateString() %></p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><span class="fw-semibold text-secondary">Total Amount:</span></p>
                                    <p class="fs-6 fw-bold" id="totalAmount">$<%= order.totalPrice ? order.totalPrice.toFixed(2) : 'Loading...' %></p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><span class="fw-semibold text-secondary">Payment Method:</span></p>
                                    <p class="fs-6" id="paymentMethod"><%= order.paymentMethod || 'Loading...' %></p>
                                </div>
                                <div class="col-12">
                                    <p class="mb-1"><span class="fw-semibold text-secondary">Shipping Address:</span></p>
                                    <p class="fs-6" id="shippingAddress"><%= order.address ? `${order.address.street}, ${order.address.city}, ${order.address.state}, ${order.address.zipCode}, ${order.address.country}` : 'Loading...' %></p>
                                </div>
                                <div class="col-12">
                                    <p class="mb-1"><span class="fw-semibold text-secondary">Estimated Delivery:</span></p>
                                    <p class="fs-6" id="estimatedDelivery"><%= estimatedDelivery %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="text-center mt-4">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="/shop" class="btn btn-dark px-4 py-2 me-md-2">Continue Shopping</a>
                        <a href="/user/orders" class="btn btn-outline-dark px-4 py-2 " id="view-order">View My Orders</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <p class="small text-muted">Need help? <a href="/contact" class="text-decoration-none">Contact our customer support</a></p>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Add tracking info notification if needed
        const notificationArea = document.createElement('div');
        notificationArea.className = 'alert alert-info mt-3 text-center';
        notificationArea.innerHTML = '<small>You will receive an email with your order details and tracking information shortly.</small>';
        
        document.querySelector('.order-details').after(notificationArea);

    });
</script>

<%- include('../user/partials/footer') %>