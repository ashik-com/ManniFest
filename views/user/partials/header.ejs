    <style>
        .google-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            background-color: #ffffff;
            color: #000;
            border: 1px solid #ddd;
            padding: 10px;
            text-decoration: none;
            font-weight: bold;
        }

        .google-logo {
            width: 20px;
            height: 20px;
        }

        .image-zoom-container {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: auto;
    cursor: crosshair;
}

.zoom-image {
    width: 100%;
    transition: transform 0.2s ease;
}


.product-container {
            display: flex;
            gap: 10px;
        }
        .thumbnails {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }
        .thumbnails img {
            width: 80px;
            height: 80px;
            cursor: pointer;
            border: 2px solid #ddd;
            transition: 0.3s;
        }
        .thumbnails img:hover {
            border-color: #333;
        }
        .main-image img {
            width: 600px;
            height: 650px;
            object-fit: cover;
            border: 2px solid #ddd;
        }


        .picker-container {
            margin-top: 15px;
            margin-bottom: 15px;
        }
        .color-picker {
            display: flex;
            gap: 10px;
        }
        .color-option {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            cursor: pointer;
            border: 2px solid transparent;
        }
        .color-option.selected {
            border: 2px solid black;
        }
        .size-picker {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }
        .size-option {
            padding: 5px 15px;
            border: 2px solid #ddd;
            cursor: pointer;
            font-size: 16px;
            border-radius: 5px;
        }
        .size-option.selected {
            border-color: black;
            background-color: #eee;
        }
        .selected-info {
            margin-top: 10px;
            font-size: 18px;
        }







