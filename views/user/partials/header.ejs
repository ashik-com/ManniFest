    <style>
        /* Section Styling */
.product_list.best_seller {
  padding: 60px 0; /* Consistent padding */
  background-color: #f5f5f5; /* Light background for contrast */
}

/* Grid Setup */
.grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px; /* Space between product cards */
}

/* Product Card */
.single_product_item {
  background-color: #fff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  height: 100%; /* Ensure cards stretch evenly */
  display: flex;
  flex-direction: column;
}

.single_product_item:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
}

/* Product Image Wrapper */
.product_image_wrapper {
  position: relative;
  width: 100%;
}

.product_image_wrapper img {
  width: 100%;
  height: 450px; /* Fixed height for uniformity */
  object-fit: cover; /* Crop images neatly */
  display: block;
}

/* Quick View Button */
.quick_view_btn {
  position: absolute;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 8px 20px;
  border-radius: 5px;
  text-decoration: none;
  font-size: 0.9rem;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.single_product_item:hover .quick_view_btn {
  opacity: 1; /* Show on hover */
}

/* Product Text */
.single_product_text {
  padding: 15px;
  text-align: center;
  flex-grow: 1; /* Allows text section to fill space */
}

.single_product_text h4 {
  font-size: 1.1rem;
  margin-bottom: 10px;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; /* Truncate long names */
}

.single_product_text h3 {
  font-size: 1.25rem;
  color: #e74c3c; /* Red for price */
  font-weight: bold;
}

/* Section Title */
.section_tittle h2 {
  font-size: 2rem;
  margin-bottom: 40px;
  color: #222;
}

/* Responsive Adjustments */
@media (max-width: 992px) {
  .product_image_wrapper img {
    height: 220px; /* Slightly smaller on tablets */
  }
}

@media (max-width: 768px) {
  .grid-item {
    flex: 0 0 50%; /* 2 columns on smaller screens */
    max-width: 50%;
  }
  .product_image_wrapper img {
    height: 200px;
  }
}

@media (max-width: 576px) {
  .grid-item {
    flex: 0 0 100%; /* Stack on mobile */
    max-width: 100%;
  }
  .product_image_wrapper img {
    height: 180px;
  }
}


.profile-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40px;
    font-weight: bold;
    color: white;
    background-color: #007bff;
    overflow: hidden;
}

.profile-avatar img.profile-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
}




/* banner */
/* Attractive Banner Styling */
.carousel {
    margin-bottom: 50px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
}

.carousel-inner img {
    height: 550px; /* Taller banner for impact */
    object-fit: cover;
    filter: brightness(90%); /* Slight dimming for text contrast */
}

.carousel-caption {
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.4)); /* Gradient overlay */
    padding: 30px 40px;
    border-radius: 10px;
    text-align: center;
    bottom: 25%; /* Higher placement for prominence */
    transform: translateY(50%);
    animation: fadeInUp 1s ease-in-out; /* Animation for engagement */
}

.carousel-caption h5 {
    font-size: 2.8rem; /* Bold, large heading */
    font-weight: 800;
    color: #fff;
    text-transform: uppercase;
    margin-bottom: 15px;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); /* Shadow for readability */
}

.carousel-caption p {
    font-size: 1.5rem;
    color: #ffd700; /* Gold accent for vibrancy */
    margin-bottom: 20px;
    font-weight: 500;
}

.carousel-caption .btn {
    font-size: 1.2rem;
    padding: 12px 30px;
    border-radius: 30px; /* Rounded, modern buttons */
    text-transform: uppercase;
    transition: transform 0.3s, background-color 0.3s;
}

.carousel-caption .btn:hover {
    transform: scale(1.05); /* Slight zoom on hover */
    opacity: 0.9;
}

.carousel-control-prev, .carousel-control-next {
    width: 8%; /* Wider clickable area */
    opacity: 0.8;
}

.carousel-control-prev-icon, .carousel-control-next-icon {
    width: 40px;
    height: 40px;
    background-size: 100%, 100%;
    border-radius: 50%; /* Circular controls */
    background-color: rgba(0, 0, 0, 0.5);
}

/* Animation for caption */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(70%);
    }
    to {
        opacity: 1;
        transform: translateY(50%);
    }
}



/* wallet */

.wallet-card {
